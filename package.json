{
  "private": true,
  "name": "rest-countries-app-rmx",
  "version": "1.0.0",
  "description": "This is a solution to the Product feedback app challenge on Frontend Mentor. Frontend Mentor challenges help you improve your coding skills by building realistic projects.",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && npm run build:remix",
    "build:css": "npm run generate:css -- --env production",
    "build:remix": "remix build",
    "dev": "concurrently npm:dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "generate:css": "postcss styles --base styles --ext css --dir app/styles",
    "lint": "concurrently npm:lint:*",
    "lint:code": "eslint --cache --ignore-path .gitignore \"**/*.[jt]s?(x)\"",
    "lint:css": "stylelint \"**/*.pcss\" --cache",
    "fix": "concurrently npm:fix:*",
    "fix:code": "eslint --cache --fix --ignore-path .gitignore \"**/*.[jt]s?(x)\"",
    "fix:css": "stylelint \"**/*.pcss\" --cache --fix",
    "format": "prettier --ignore-path .gitignore --write .",
    "prepare": "husky install",
    "test": "vitest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richardcyrus/fm-rmx-rest-countries-api-app.git"
  },
  "keywords": [
    "axe-core",
    "css-custom-properties",
    "cypress",
    "cypress-axe",
    "frontend-mentor",
    "heroicons-react",
    "html5",
    "postcss",
    "reach-ui",
    "reactjs",
    "remix-run",
    "stylelint",
    "testing-library",
    "typescript",
    "vitest"
  ],
  "author": "Richard Cyrus <richard.cyrus@rcyrus.com> (https://www.richardcyrus.com)",
  "bugs": {
    "url": "https://github.com/richardcyrus/fm-rmx-rest-countries-api-app/issues"
  },
  "homepage": "https://github.com/richardcyrus/fm-rmx-rest-countries-api-app#readme",
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@reach/listbox": "^0.17.0",
    "@reach/visually-hidden": "^0.17.0",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/vercel": "^1.5.1",
    "@vercel/node": "^1.15.4",
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/eslint": "^8.4.2",
    "@types/node": "^17.0.39",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.11",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^2.55.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.5.0",
    "micromatch": "^4.0.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-sort-media-queries": "^4.2.1",
    "prettier": "^2.6.2",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.8.5",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.7.3",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.9.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
